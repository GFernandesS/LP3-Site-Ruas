@model IEnumerable<SeminarioLP3.Models.Rua>

@{
    ViewBag.Title = "Visualizar";
}

<h2>Visualizar</h2>


<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CEP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bairro.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoComercio.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoComercio.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdRua }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.IdRua }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.IdRua })
            </td>
        </tr>
    }

</table>
